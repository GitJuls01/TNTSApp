<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer border (shadow effect) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#222222" /> <!-- Shadow color (black) -->
            <corners android:radius="25dp" />
        </shape>
    </item>

    <!-- Button background color and actual button shape -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="7dp"> <!-- Offset to show shadow at the bottom -->
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9" /> <!-- Actual button background color -->
            <stroke
                android:width="2dp"
                android:color="#C8C8C8" /> <!-- Optional border color -->
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>
