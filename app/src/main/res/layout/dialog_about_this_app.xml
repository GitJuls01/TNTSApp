<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/tvAboutThisApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About this app"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The application aims to deliver top-notch technical education and vocational training to students in Tanza, Cavite, and nearby areas. Focused on preparing students for various technical careers, TNTS-Annex offers specialized programs such as Computer System Servicing (CSS) to meet the needs of the fast-changing technology sector."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/black" />
</LinearLayout>
